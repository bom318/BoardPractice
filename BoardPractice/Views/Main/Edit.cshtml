@model BoardPractice.Models.Board

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Main/Update" method="post">
    <table class="tbl_basic">
        <tr>
            <th style="width: 10%;">이름</th>
            <td><input type="text" name="userId" value="@Model.userId"/></td>
        </tr>
        <tr>
            <th>제목</th>
            <td colspan="3"><input type="text" name="title" value="@Model.title"/></td>
        </tr>
        <tr>
            <th>내용</th>
            <td colspan="3"><textarea name="content" rows="10">@Model.content</textarea></td>
        </tr>
    </table>
    <p>
        <input type="hidden" name="num" value="@Model.num"/>
        <input type="submit" value="저장" />
    </p>
</form>

<div>
    <a href="~/Main/Details?num=@Model.num">Back To List</a>
</div>