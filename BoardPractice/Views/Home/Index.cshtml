<div class="login-form">
    <form action="#" method="post">
        <div class="id">
            <span>ID : </span>
            <input type="text" name="userId" required/>
            <span class="text-danger" asp-validation-for="UserId"></span>
        </div>
        <div class="password">
            <span>PASSWORD : </span>
            <input type="password" name="userPw" required/>
            <span class="text-danger" asp-validation-for="UserPassword"></span>
        </div>
        <button type="submit" class="log_bt">로그인</button>
        <a href="/Register/Index"style="cursor: pointer">회원가입</a>
    </form>
</div>

